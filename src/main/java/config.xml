		p:id="10" p:name="Sagar" /> 
	-->
	<!--
		using attributes 
		<bean name="emp" class="com.sagar.spring.springcore.Employee">
			<property name="id" value="20" />
			<property name="name" value="Sagar" />
		</bean>
	-->
	<!-- 
		using nested value element
		<property name="id">
			<value>20</value>
		</property>
		<property name="name">
			<value>Sagar</value>
		</property>
	 -->
	
</beans>